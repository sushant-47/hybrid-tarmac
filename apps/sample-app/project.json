{
    "name": "sample",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "prefix": "sa",
    "sourceRoot": "apps/sample-app/src",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/apps/sample-app",
                "browser": "apps/sample-app/src/main.ts",
                "polyfills": [
                    "zone.js"
                ],
                "tsConfig": "apps/sample-app/tsconfig.app.json",
                "inlineStyleLanguage": "scss",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/sample-app/public"
                    }
                ],
                "styles": [
                    "apps/sample-app/src/styles.scss"
                ]
            },
            "configurations": {
                "production": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ],
                    "outputHashing": "all"
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@angular/build:dev-server",
            "configurations": {
                "production": {
                    "buildTarget": "sample:build:production"
                },
                "development": {
                    "buildTarget": "sample:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "extract-i18n": {
            "executor": "@angular/build:extract-i18n",
            "options": {
                "buildTarget": "sample:build"
            }
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "sample:build",
                "staticFilePath": "dist/apps/sample-app/browser",
                "spa": true
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "apps/sample-app/jest.config.ts",
                "debug": false,
                "testMatch": [
                    "**/*.comp.spec.ts"
                ],
                "watchPathIgnorePatterns": [
                    "{workspaceRoot}/node_modules/",
                    "{workspaceRoot}/dist/"
                ],
                "_comment": [
                    "Use testMatch, findRelatedTests options to test specific test files using regex, a comma-separated list respectively.",
                    "See https://jestjs.io/docs/configuration#testmatch-arraystring"
                ]
            }
        }
    }
}